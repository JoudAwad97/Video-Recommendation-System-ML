{
  "name": "video-recommendation-system-infra",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Video Recommendation System",
  "main": "dist/bin/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:dev": "cdk deploy --all --require-approval never -c environment=dev",
    "deploy:staging": "cdk deploy --all --require-approval never -c environment=staging",
    "deploy:prod": "cdk deploy --all --require-approval never -c environment=prod",
    "destroy": "cdk destroy --all --force",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "~5.3.0",
    "aws-cdk": "^2.120.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
